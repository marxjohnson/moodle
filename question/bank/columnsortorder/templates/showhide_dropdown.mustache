{{!
    @template qbank_columnsortorder/showhide_dropdown

    Renders a list of column names with checkboxes to select which should be shown or hidden in the question bank table.

    Example context (json):
    {
        "id": "container_id",
        "text": "Show/Hide column",
        "columns": [
            {
                "name": "Column A",
                "id": "column_id",
                "checked": true
            }
        ]
    }
}}
<div class="btn-group" id="{{id}}">

    <button class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        {{#text}}
            {{text}}
        {{/text}}

        {{#pixicon}}
            {{#pix}}{{pixicon}}, {{pixcomponent}}{{/pix}}
        {{/pixicon}}

    </button>

    <div class="dropdown-menu dropdown-menu-right" role="menu">
        {{#columns}}
            <label class="dropdown-item">
                <input role="menuitemcheckbox" type="checkbox" class="checkbox" value="{{id}}" id="cb_{{id}}"
                       {{#checked}}checked{{/checked}} aria-checked="{{#checked}}true{{/checked}}{{^checked}}false{{/checked}}">
                {{{name}}}
            </label>
        {{/columns}}
    </div>
</div>
