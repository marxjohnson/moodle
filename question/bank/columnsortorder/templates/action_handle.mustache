{{!
    @template qbank_columnsortorder/action_handle

    This template renders the header of the columns

    Example context (json):
    {
        "action": "resize",
        "target": "question_name_idnumber_tags_column",
        "title": "Resize column",
        "pixicon": "resizehandle",
        "pixcomponent": "qbank_columnsortorder"
    }
}}
<span tabindex="0" role="button"{{#popup}} aria-haspopup="true"{{/popup}}
      data-action="{{action}}"
      data-target="{{target}}"
      title="{{title}}">
        {{#pixicon}}
            {{#pix}}{{pixicon}}, {{pixcomponent}}{{/pix}}
        {{/pixicon}}
        {{#icon}}
            <i class="fa fa-{{{icon}}} mr-1" aria-hidden="true"></i>
        {{/icon}}
        {{#text}}
            {{text}}
        {{/text}}
</span>
