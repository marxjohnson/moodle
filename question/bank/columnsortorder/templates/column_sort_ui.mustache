{{!
    @template qbank_columnsortorder/column_sort_ui

    Admin question bank setting template.

    Context variables required for this template:
    * name - plugin name
    * hiddenname - class/columname

    Example context (json):
    {
        "names": [
            {
                "name": "Column A",
                "tiptitle": "Column A",
                "colname": "col_name_A",
                "class": "class_name_A"
            },
            {
                "name": "Column B",
                "tiptitle": "Column B",
                "colname": "col_name_B",
                "class": "class_name_B"
            }
        ]
    }
}}
<div>
    {{#str}}qbanksortdescription, qbank_columnsortorder{{/str}}
</div>
<br>
<div id="show-hide-dropdown" class="qbank-show-hide-dropdown mb-3">
</div>
    <table class="question-bank-table" id="qbank_columnsortorder-{{uniqid}}"
           data-pinnedcolumns="{{pinnedcolumns}}" data-hiddencolumns="{{hiddencolumns}}" data-colsize="{{colsize}}">
        <thead>
        <tr class="column">
            {{#names}}
                {{>core_question/column_header}}
            {{/names}}
        </tr>
        </thead>
    </table>
<br>
<div>
    {{#columnsdisabled}}
        {{#str}}qbankcolumnsdisabled, qbank_columnsortorder{{/str}}
        <br>
    {{/columnsdisabled}}
    {{#disabled}}
        <div class="list-group-item disabled">
            {{disabledname}}
        </div>
    {{/disabled}}
</div>
{{#js}}
    require(['qbank_columnsortorder/qbank_column_action'], function(AdminTable) {
        AdminTable.init("qbank_columnsortorder-{{uniqid}}", true);
    });
{{/js}}
<br>
<div>
    {{{urltomanageqbanks}}}
</div>
